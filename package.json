{
  "name": "tesla-project",
  "version": "1.0.0",
  "description": "Mono-repo for tesla full stack project",
  "scripts": {
    "start": "npm run build && npm run dev",
    "build": "npm run build --workspace=utils --workspace=energy-sales-subgraph --workspace=energy-sales-client",
    "dev": "npm-run-all --parallel dev:energy-sales-subgraph dev:energy-sales-client",
    "dev:energy-sales-subgraph": "npm run dev --prefix ./services/energy-sales-subgraph",
    "dev:energy-sales-client": "npm run dev --prefix ./clients/energy-sales-client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zrefai/tesla-project.git"
  },
  "author": "Zaki Refai",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zrefai/tesla-project/issues"
  },
  "homepage": "https://github.com/zrefai/tesla-project#readme",
  "workspaces": [
    "clients/energy-sales-client",
    "services/energy-sales-subgraph",
    "libraries/utils"
  ],
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "next": "14.2.4"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "npm-run-all": "^4.1.5"
  }
}
