{
  "name": "energy-sales-subgraph",
  "author": "Zaki Refai",
  "license": "ISC",
  "description": "GQL subgraph for energy sales.",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "format": "npx prettier --write src",
    "format:check": "npx prettier --check src",
    "codegen": "graphql-codegen",
    "build": "npm-run-all clean format codegen && tsc",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/index.ts",
    "build:prod": "NODE_ENV=production npm run build",
    "prod": "npm run build:prod && node -r ./prod-paths.js ./dist/index.js",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/server": "^4.3.3",
    "@apollo/subgraph": "^2.3.1",
    "@graphql-tools/load-files": "^7.0.0",
    "@types/amqplib": "^0.10.5",
    "amqplib": "^0.10.3",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "graphql": "latest",
    "graphql-tag": "latest",
    "mongodb": "^6.5.0",
    "tsconfig-paths": "^4.2.0",
    "@libraries/utils": "file:../../libraries/utils"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^20.0.0",
    "jest": "^29.0.3",
    "nodemon": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "ts-jest": "^29.0.2",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "testRegext": "/__tests__/.*.test.ts",
        "verbose": true
      }
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
